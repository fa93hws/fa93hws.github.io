{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",    
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es5",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],    
}
